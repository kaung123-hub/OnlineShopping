<main>
    <div class="container my-5 py-5">


        <!--Section: Content-->
        <section class="text-center">


            <!--Grid row-->
            <div class="row">

                <!--Grid column-->
                <% prods.forEach(product => {%>
                <div class="col-lg-4 col-md-6 mb-4">

                    <a href="" class="waves-effect waves-light">
                        <img src="<%= product.image%>" alt="<%= product.title%>" style="width: 100%; height: 200px">
                    </a>

                    <p class=" mb-1"><a href="" class="font-weight-bold black-text"><%= product.title%></a></p>

                    <p class="mb-1"><strong>$<%= product.price%></strong></p>

                    <p class="mb-1"><%= product.description%></p>

                    <!-- <div class="amber-text fa-xs mb-1">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div> -->

                    <div class="d-flex ml-5 pl-5">
                        <a href="/admin/edit-product/<%= product._id %>?edit=true"
                            class="btn btn-success btn-sm">Edit</a>
                        <form action="/admin/delete-product" method="POST">
                            <input type="hidden" name="productId" value="<%= product._id %>">
                            <input type="submit" class="btn btn-danger btn-sm" value="Delete">
                        </form>
                    </div>

                </div>
                <!--Grid column-->
                <%})%>
            </div>
            <!--Grid row-->


        </section>
        <!--Section: Content-->


    </div>
</main>