<main>
    <div class="container my-5 py-3 z-depth-1 rounded">


        <!--Section: Content-->
        <section class="dark-grey-text">

            <!-- Shopping Cart table -->
            <div class="table-responsive">
                <div class="card-header default-color text-center my-2">
                    <h1 class="text-white">Your Cart List</h1>
                </div>

                <% if(prods.length>0){ %>
                <table class="table product-table mb-0">
                    <!-- Table head -->
                    <thead class="mdb-color lighten-5">
                        <tr>
                            <th></th>
                            <th class="font-weight-bold">
                                <strong>Product</strong>
                            </th>
                            <th></th>
                            <th class="font-weight-bold">
                                <strong>Price</strong>
                            </th>
                            <th class="font-weight-bold">
                                <strong>QTY</strong>
                            </th>
                            <th class="font-weight-bold">
                                <strong>Amount</strong>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <!-- /.Table head -->

                    <!-- Table body -->
                    <tbody>
                        <% prods.forEach( product=> {%>
                        <tr>
                            <th scope="row">
                                <img src="<%= product.productId.image %>" alt="<%= product.productId.title %>"
                                    class="img-fluid w-50">
                            </th>
                            <td>
                                <h5 class="mt-3">
                                    <h5><%= product.productId.title %></h5>
                                </h5>
                            </td>
                            <td></td>
                            <td>
                                <h5 class="mt-3"><%= product.productId.price %></h5>
                            </td>
                            <td>
                                <h5 class="mt-3"><%= product.quantity %></h5>
                            </td>
                            <td class="font-weight-bold">
                                <h5 class="mt-3"><%= (product.quantity*product.productId.price) %></h5>
                            </td>
                            <td>
                                <form action="/delete-cart-item" method="POST">
                                    <input type="hidden" name="productId" value="<%= product.productId._id %>">
                                    <button type="submit" class="btn btn-sm btn-danger mt-3" data-toggle="tooltip"
                                        data-placement="top" title="Remove item">X
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                        <!-- First row -->

                        <!-- /.First row -->

                        <!-- Fourth row -->
                        <tr>
                            <td colspan="3"></td>
                            <td colspan="7" class="text-right">
                                <form action="/orders" method="POST">
                                    <button type="submit" class="btn btn-primary btn-rounded">Order Now
                                        <i class="fas fa-angle-right right"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <!-- Fourth row -->

                    </tbody>
                    <!-- /.Table body -->

                </table>
                <% }  
                else { %>
                <div class="jumbotron light-blue lighten-5 text-center">
                    <h1>Nothing Here!!</h1>
                </div>
                <% } %>
            </div>
            <!-- /.Shopping Cart table -->

        </section>
        <!--Section: Content-->


    </div>
</main>