<main>
    <div class="container my-5 py-5">


        <!--Section: Content-->
        <section class="text-center">


            <!--Grid row-->
            <div class="row">

                <!--Grid column-->
                <% prods.forEach(product => {%>
                    <div class="col-lg-4 col-md-6 mb-4">

                        <a href="" class="waves-effect waves-light"><img style="width:100%; height:200px;"
                            src="<%= product.image%>" alt="<%= product.title%>"></a>

                        <p class="mb-1">
                            <a href="" class="font-weight-bold black-text">
                                <%= product.title%>
                            </a>
                        </p>

                        <p class="mb-1"><strong>$<%= product.price%></strong></p>

                        <p class="mb-1">
                            <%= product.description%>
                        </p>

                        <!-- <div class="amber-text fa-xs mb-1">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div> -->

                        <!-- <form action="/cart" method="post"> -->
                        <% if(isAuthenticated) { %>
                            <form action="/cart" method="POST">
                                <button class="btn btn-black btn-rounded btn-sm px-3">Add to Cart</button>
                                <input type="hidden" name="prodId" value="<%= product._id %>">
                            </form>
                            <% } %>
                                <!-- </form> -->
                                <a href="/products/<%= product._id %>" class="btn btn-outline-black btn-rounded btn-sm px-3 waves-effect">Details</a>

                    </div>
                    <!--Grid column-->
                    <%})%>
            </div>
            <!--Grid row-->


        </section>
        <!--Section: Content-->


    </div>
</main>